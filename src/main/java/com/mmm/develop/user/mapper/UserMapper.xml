<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mmm.develop.user.dao.UserDao" >
    <resultMap id="UserResultMap" type="com.mmm.develop.user.entity.User" >
        <id column="user_id" property="id" jdbcType="INTEGER" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="user_phone" property="phone" jdbcType="VARCHAR" />
        <result column="user_email" property="email" jdbcType="VARCHAR" />
        <result column="user_sex" property="sex" jdbcType="INTEGER" />
        <result column="birth_date" property="birthDate" jdbcType="VARCHAR" />
        <result column="head_picture" property="headPicture" jdbcType="VARCHAR" />
        <result column="introduction" property="introduction" jdbcType="VARCHAR" />
        <result column="created_time" property="createdTime" jdbcType="VARCHAR" />
        <result column="last_login_time" property="lastLoginTime" jdbcType="VARCHAR" />
    </resultMap>

    <select id="get" resultMap="UserResultMap">
        select *
        from t_mmm_user
        where user_id = #{id}
    </select>
</mapper>